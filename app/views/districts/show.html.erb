<div id="barrio" class="band">
  <div class="container">
    <img src="http://maps.google.com/staticmap?center=<%= @district.coordinates %>&size=400x400&zoom=14&markers=<%= @district.coordinates %>,red&key=<%= get_gmaps_api_key %>" />
    <h3>Información sobre <br /><strong><%= @district.city.name %> » <%= @district.name %></strong></h3>
    <p>Más información de <strong><%= @district.name %></strong>, en la Wikipedia.</p>
  </div>
</div>
<div id="datos">
  <div class="container">
    <h3>Datos del barrio</h3>

    <h5>Edad de los vecinos</h5>
    <div class="barbg">
      <div class="bar" style="width: <%= @district.age_points %>px"></div>
    </div>
    <h5>Cultural y deportivo</h5>
    <div class="barbg">
      <div class="bar" style="width: <%= @district.culture_and_sport_points %>px"></div>
    </div>
    <h5>Riqueza</h5>
    <div class="barbg">
      <div class="bar" style="width: <%= @district.wealth_points %>px"></div>
    </div>

    <p><a href="#">¿de dónde salen estos datos?</a></p>

  </div>
</div>
<hr />
<div id="como" class="container">
  <h4>Es como...</h4>
  <% @district.suggestions.each do |district| %>
  <div class="item span-12<%= ' city' if district.city == @district.city %><%= cycle("", "last") -%>">
    <img src="http://maps.google.com/staticmap?center=<%= district.coordinates %>&size=190x126&zoom=14&markers=<%= district.coordinates %>,red&key=<%= get_gmaps_api_key %>" class="span-5" />
    <h5><%= district.name %>, <%= district.city.name %></h5>
    <small>“<%= district.name %> es el <%= @district.name %> de <%= district.city.name %>”</small>
  </div><!-- /item -->
  <% end %>
  <div id="search_box">
    <form>
    <label for="q">Busca un barrio de Wadus para ver si mola:</label>
    <%= text_field_tag :q, nil, :id => "search_field" %>
    </form>
  </div>
</div>


